<div class="container">
    <% @choice_games_with_votes.each do |choice_cat| %>
    <div id="results" data-room-id="<%= choice_cat.room.id %>">

        <div style="width: 800px; heigth:20px; display:flex; justify-content: left">
          <div id="result-<%= choice_cat.game.id %>" class="skifetch" style="<%= choice_cat.rank %>"></div>
