<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name,
                required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Ok !" %>
  </div>
<% end %>

